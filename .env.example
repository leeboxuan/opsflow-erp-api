# Server Configuration
PORT=3001

# Database (PostgreSQL)
# Format: postgresql://user:password@host:port/database?schema=public
DATABASE_URL="postgresql://user:password@localhost:5432/cargo_erp?schema=public"

# Supabase Configuration
# Required: Either SUPABASE_PROJECT_URL or SUPABASE_PROJECT_REF
# Option 1: Full project URL
SUPABASE_PROJECT_URL="https://your-project-ref.supabase.co"

# Option 2: Project reference only (alternative to SUPABASE_PROJECT_URL)
# SUPABASE_PROJECT_REF="your-project-ref"

# Supabase Service Role Key (required for admin operations)
SUPABASE_SERVICE_ROLE_KEY="your_service_role_key_here"

# Legacy support (used as fallback if SUPABASE_PROJECT_URL not set)
SUPABASE_URL="https://your-project-ref.supabase.co"

# CORS Configuration
# Frontend application URL (for CORS whitelist)
WEB_APP_URL="http://localhost:3000"
